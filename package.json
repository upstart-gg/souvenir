{
  "name": "@upstart.gg/souvenir",
  "version": "0.0.0",
  "description": "Memory management system for AI agents built with the Vercel AI SDK",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:bundle && bun run build:types",
    "build:clean": "rm -rf dist",
    "build:bundle": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun build ./src/index.ts --outdir ./dist --target node --format cjs --outfile index.cjs && bun build ./src/tools/index.ts --outdir ./dist/tools --target node --format esm && bun build ./src/tools/index.ts --outdir ./dist/tools --target node --format cjs --outfile index.cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "release": "bunup && bun run build && changeset publish",
    "prepublishOnly": "bun run build && bun run test"
  },
  "keywords": [
    "ai",
    "memory",
    "agent",
    "llm",
    "knowledge-graph",
    "vercel-ai-sdk",
    "rag",
    "vector-search"
  ],
  "author": "Upstart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upstart-gg/souvenir.git"
  },
  "bugs": {
    "url": "https://github.com/upstart-gg/souvenir/issues"
  },
  "homepage": "https://github.com/upstart-gg/souvenir#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "bunup": "^0.15.13",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chonkiejs": "^0.2.10",
    "postgres": "^3.4.5"
  },
  "peerDependencies": {
    "ai": ">=5.0.0",
    "zod": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
