{
  "name": "@upstart.gg/souvenir",
  "version": "0.0.0",
  "description": "Memory management system for AI agents built with the Vercel AI SDK",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bunup",
    "test": "bash scripts/test.sh",
    "test:ci": "DATABASE_URL='postgresql://postgres:postgres@localhost:54322/souvenir_test' bun test --timeout 30000",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "docker:up": "docker-compose up -d && sleep 10",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "docker:logs": "docker-compose logs postgres",
    "docker:status": "docker-compose ps",
    "db:diagnose": "bash scripts/diagnose-db.sh",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "ai",
    "memory",
    "agent",
    "llm",
    "knowledge-graph",
    "vercel-ai-sdk",
    "rag",
    "vector-search"
  ],
  "author": "Upstart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upstart-gg/souvenir.git"
  },
  "bugs": {
    "url": "https://github.com/upstart-gg/souvenir/issues"
  },
  "homepage": "https://github.com/upstart-gg/souvenir#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "bunup": "^0.15.13",
    "typescript": "^5.6.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-tabs": "^0.7.3"
  },
  "dependencies": {
    "@chonkiejs/core": "^0.0.5",
    "postgres": "^3.4.5"
  },
  "peerDependencies": {
    "ai": ">=5.0.0",
    "zod": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0",
    "deno": ">=1.0.0"
  }
}